import org.newdawn.slick.*;

public class GameObject 
{

	private float x;
	private float y;
	private float height;
	private float width;
	private boolean useable;
	
	
	GameObject(float newX, float newY, float newHeight, float newWidth, boolean isUseable)
	{
		x = newX;
		y = newY;
		width = newWidth;
		height = newHeight;
		useable = isUseable;
	}
	
	public float getX()
	{
		return x;
	}
	
	public float getY()
	{
		return y;
	}

	public float getWidth()
	{
		return width;
	}
	
	public float getHeight()
	{
		return height;
	}	
	
	public void setY(float newY)
	{
		y = newY;
	}
	
	public void setX(float newX)
	{
		x = newX;
	}

	public void setWidth(float newWidth)
	{
		width = newWidth;
	}

	public void setHeight(float newHeight)
	{
		height = newHeight;
	}
}
