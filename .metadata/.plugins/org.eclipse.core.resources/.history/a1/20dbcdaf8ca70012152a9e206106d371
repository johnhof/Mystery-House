import org.newdawn.slick.Animation;
import org.newdawn.slick.Image;


public class Sprite extends GameObject implements Constants{
    private Animation state, up, down, left, right;
    int stateId;
    
    public Sprite(Animation newState)
    {
    	super();
    	state = newState;
    }
    public Sprite(
    		float newX, float newY, Boundary newBound, boolean isUseable, Image newImg
    		Animation newUp, Animation newDown, Animation newLeft, Animation newRight)
    {
    	super();
    	up = newUp;
    	down = newDown;
    	left = newLeft;
    	right = newRight;
    }
    
    public void stateUp(){state = up;}
    public void stateDown(){state = down;}
    public void stateLeft(){state = left;}
    public void stateRight(){state = right;}
    public void setState(int stateId)
    {
    	switch(stateId)
    	{
    		case UP: 
    			break;
    		case DOWN:
    			break;
    		case LEFT:
    			break;
    		case RIGHT:
    			break;
    		default:
    			System.out.println("WARNING: invalid state ID");
    	}
    }
    
    public int getStateId()
    {
    	return stateId;
    }
    public Animation getAnimationState()
    {
    	return state;
    }
}
